#!/bin/bash
echo "   [0;33mOracle Virtualbox Installer[0m"
echo ""
read -p "   This script will install the Oracle version of VirtualBox: 
   [0;32mhttps://www.virtualbox.org/wiki/Linux_Downloads[0m

   A new menu entry will be placed in the Quick Grab menu.

   [0;31mNote*[0m [0;33mFor Virtualbox to function,[0m [0;31mKVM may need to be disabled.[0m

   [0;33mFor a temporary session try in a terminal:
   sudo modprobe -r kvm
   sudo modprobe -r kvm_intel
   
   To disable on boot, open /etc/default/grub. Look for the line:
   GRUB_CMDLINE_LINUX_DEFAULT=, and add: kvm.enable_virt_at_load=0

   Or, blacklist KVM in /etc/modprobe.d/kvm-blacklist.conf, place:
   blacklist kvm
   blacklist kvm_intel[0m
   [0;32m-----------------------------------------------------
   
   Please press enter to install VirtualBox from Oracle.
   
   -----------------------------------------------------[0m    
    Or close this terminal window to quit the install." ;   
    if : >/dev/tcp/8.8.8.8/53; then
echo ""   
echo ""
vb_package="virtualbox-7.2"

# Install repositories and update
sudo wget --prefer-family=IPv4 -O- https://www.virtualbox.org/download/oracle_vbox_2016.asc | sudo gpg --no-default-keyring --keyring gnupg-ring:/etc/apt/trusted.gpg.d/virtualbox.gpg --import
sudo chmod 644 /etc/apt/trusted.gpg.d/virtualbox.gpg
grep -qF "deb" /etc/apt/sources.list.d/virtualbox.list  || echo 'deb [arch=amd64] http://download.virtualbox.org/virtualbox/debian trixie contrib' |\
sudo tee -a /etc/apt/sources.list.d/virtualbox.list
sudo apt update
# Install packages
echo ""
echo -e "\e[1mInstalling packages...\e[0m"
echo ""
[ "$(find /var/cache/apt/pkgcache.bin -mtime 0 2>/dev/null)" ] || sudo apt-get update  
sudo apt-get install -y build-essential libsdl-ttf2.0-0 linux-headers-$(uname -r) "$vb_package" || exit 1

sed -i '/Virtualbox,         virtualbox,       virtualbox/d' ~/.config/jgmenu/prepend.csv &&
sed -i '/Root Folders,^checkout(rootfiles),folder/a Virtualbox,         virtualbox,       virtualbox' ~/.config/jgmenu/prepend.csv
killall -q jgmenu
echo ""
echo "   ----------------------------------------------------------------"
echo ""
echo "   [0;32mAll Finished![0m"
echo ""
echo "   [0;33mIf installed, You should find a new menu entry under 'Quick Grab'[0m"
echo "" 
echo "   [0;32mMenu entries will need to be removed manually if uninstalled." 
echo "   See Jgmenu Conf under Configuration in the menu for directions.[0m"
echo ""
echo "   [0;31mNote*[0m [0;33mFor Virtualbox to function,[0m [0;31mKVM may need to be disabled.[0m

   [0;33mFor a temporary session try in a terminal:
   sudo modprobe -r kvm
   sudo modprobe -r kvm_intel
   
   To disable on boot, open /etc/default/grub. Look for the line:
   GRUB_CMDLINE_LINUX_DEFAULT=, and add: kvm.enable_virt_at_load=0

   Or, blacklist KVM in /etc/modprobe.d/kvm-blacklist.conf, place:
   blacklist kvm
   blacklist kvm_intel[0m"
echo ""
echo "----------------------------------------------------------------"
else
echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
 echo ""
 echo "   [0;33mNo internet connection. Please connect and try again.[0m"
 echo ""
 echo "   [0;31m-----------------------------------------------------[0m"
echo ""
fi
read -n1 -p " Press any key to quit this dialog ... "
